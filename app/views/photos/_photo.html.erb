<div class="event-photo buffer-both">
  <% image_author = "Добавил #{render partial: 'users/user', object: photo.user}" %>
  <% if current_user_can_edit?(photo) %>
    <% image_author += link_to fa_icon('trash'),
                                event_photo_path(photo.event, photo),
                                method: :delete,
                                data: {confirm: t('.destroy_confirm')} %>
  <% end %>

  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, class: "lbox_photo", data: {title: image_author} %>
  Добавил <%= render partial: 'users/user', object: photo.user %>
  <% if current_user_can_edit?(photo) %>
    <%= link_to fa_icon('trash'),
                event_photo_path(photo.event, photo),
                method: :delete,
                data: {confirm: t('.destroy_confirm')} %>
  <% end %>
</div>
