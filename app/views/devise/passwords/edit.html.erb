<h2><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field buffer-both">
    <%= f.label :password, t('.new_password') %><br />
    <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",
                         placeholder: t('activerecord.attributes.user.password'),
                         class: 'castom-input form-control' %>
    <%= octicon "lock", height: 16 %>
  </div>

  <div class="field buffer-both">
    <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         placeholder: t('activerecord.attributes.user.password_confirmation'),
                         class: 'castom-input form-control' %>
    <%= octicon "lock", height: 16 %>
  </div>

  <div class="actions buffer-both">
    <%= f.submit t('.change_my_password'), class: "btn btn-primary btn-sm" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
