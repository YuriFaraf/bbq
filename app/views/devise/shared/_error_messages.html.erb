<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      <%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human) %>
    </div>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
